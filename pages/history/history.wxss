/* pages/history/history.wxss */
.historylist {
  height: 100%;
  width: auto;
}
.historyitem {
  transition: all 0.5s;
  height: 150rpx;
  margin: 20rpx;
  border-bottom: 1rpx solid #EEE;
  color: #666;
  background: #fff;
  border-radius: 14rpx;
  box-shadow: rgba(0, 0, 0, 0.1) 0rpx 2rpx 2rpx 2rpx;
  position: relative;
}
.devicetype {
  position: absolute;
  left: 36rpx;
  top: 24rpx;
  width: 32rpx;
  height: 32rpx;
}
.devicename {
  position: absolute;
  left: 80rpx;
  top: 20rpx;
  font-weight: bold;
  font-size: 28rpx;
  color: #888;
}
.dateicon {
  position: absolute;
  right: 316rpx;
  top: 24rpx;
  width: 32rpx;
  height: 32rpx;
}
.date {
  position: absolute;
  right: 32rpx;
  top: 20rpx;
  font-size: 28rpx;
  color: #888;
}
.datatype {
  position: absolute;
  left: 36rpx;
  bottom: 26rpx;
  width: 46rpx;
  height: 46rpx;
}
.data {
  position: absolute;
  left: 100rpx;
  bottom: 32rpx;
  font-size: 34rpx;
  color: #333;
}
.username {
  position: absolute;
  right: 32rpx;
  bottom: 30rpx;
  font-size: 32rpx;
  color: #333;
}
.bottomspace {
  width: 100%;
  height: 180rpx;
  text-align: center;
  line-height: 180rpx;
}
.bottomspace text {
  font-size: 28rpx;
  color: #ccc;
}
.empty {
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  height: 100%;
  position: absolute;
}