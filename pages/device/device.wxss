/* pages/device/device.wxss */
.devicelist {
  height: 100%;
  width: auto;
}
.deviceitem {
  transition: all 0.5s;
  height: 180rpx;
  margin: 20rpx;
  border-bottom: 1rpx solid #EEE;
  color: #666;
  background: #fff;
  border-radius: 14rpx;
  box-shadow: rgba(0, 0, 0, 0.1) 0rpx 2rpx 2rpx 2rpx;
}
.deviceitem_pressed {
  transition: all 0.5s;
  height: 180rpx;
  margin: 20rpx;
  border-bottom: 1rpx solid #EEE;
  color: #666;
  background: #ccc;
  border-radius: 14rpx;
  box-shadow: rgba(0, 0, 0, 0.1) 0rpx 2rpx 2rpx 2rpx;
}
.leftview {
  height: 180rpx;
  width: 500rpx;
  padding-top: 36rpx;
}
.devicetype {
  float: left;
  margin-left: 36rpx;
  margin-right: 32rpx;
  width: 96rpx;
  height: 96rpx;
}
.devicename {
  font-weight: bold;
  font-size: 36rpx; 
  color: #333;
}
.locationbar {
  width: auto;
}
.locationicon {
  margin-top: 10rpx;
  margin-right: 10rpx;
  float: left;
  width: 32rpx;
  height: 32rpx;
}
.devicelocation {
  float: left;
  margin-top: 6rpx;
  font-size: 28rpx;
  color: #888;
}
.deviceedit {
  width: 60rpx;
  height: 60rpx;
  position: absolute; 
  right: 64rpx; 
  margin-top: 40rpx;
  transform: translate(0, -200rpx);
}
.devicequick {
  width: 64rpx;
  height: 64rpx;
  position: absolute; 
  right: 144rpx; 
  margin-top: 40rpx;
  transform: translate(0, -200rpx);
}
.bottomspace {
  width: 100%;
  height: 180rpx;
  text-align: center;
  line-height: 180rpx;
}
.bottomspace text {
  font-size: 28rpx;
  color: #ccc;
}
.addbutton {
  position: fixed;
  z-index: 1;
  right: 54rpx;
  bottom: 54rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 200rpx;
  background: #fff;
  box-shadow: rgba(0, 0, 0, 0.1) 0rpx 5rpx 5rpx 5rpx;
}
.addbutton_pressed {
  position: fixed;
  z-index: 1;
  right: 54rpx;
  bottom: 54rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 200rpx;
  background: #ccc;
  box-shadow: rgba(0, 0, 0, 0.1) 0rpx 5rpx 5rpx 5rpx;
}
.addbutton image {
  margin-left: 20rpx;
  margin-top: 20rpx;
  width: 80rpx;
  height: 80rpx;
}
.empty {
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  height: 100%;
  position: absolute;
}
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.5;
}
.modalDlg{
  text-align: center;
  width: 580rpx;
  height: 620rpx;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 85rpx;

  background-color: #fff;
  box-shadow: rgba(0, 0, 0, 0.1) 0rpx 5rpx 5rpx 5rpx;
  border-radius: 20rpx;
}
.qrcode {
  margin-top: 40rpx;
  width: 400rpx;
  height: 400rpx;
}
.close {
  transition: all 0.5s;
  color: #fff;
  font-size: 30rpx;
  border-radius: 10rpx;
  width: 210rpx;
  height: 80rpx;
  float: left;
  text-align: center;
  line-height: 80rpx;
  background: #000;
  margin-right: 20rpx;
}
.close_pressed {
  transition: all 0.5s;
  color: #fff;
  font-size: 30rpx;
  border-radius: 10rpx;
  width: 210rpx;
  height: 80rpx;
  float: left;
  text-align: center;
  line-height: 80rpx;
  background: #888;
  margin-right: 20rpx;
}
.bottombar {
  width: 100%;
  height: 100rpx;
  text-align: center;
}
.buttonbar {
  margin-top: 30rpx;
  height: 100rpx;
  display: inline-block;
}
.save {
  transition: all 0.5s;
  color: #fff;
  font-size: 30rpx;
  border-radius: 10rpx;
  width: 210rpx;
  height: 80rpx;
  float: left;
  text-align: center;
  line-height: 80rpx;
  background: #d92a47;
}
.save_pressed {
  transition: all 0.5s;
  color: #fff;
  font-size: 30rpx;
  border-radius: 10rpx;
  width: 210rpx;
  height: 80rpx;
  float: left;
  text-align: center;
  line-height: 80rpx;
  background: #cf7e8c;
}